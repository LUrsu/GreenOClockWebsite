/*----------------------------------------------------------
The base color for this template is #5c87b2. If you'd like
to use a different color start by replacing all instances of
#5c87b2 with your new color.
----------------------------------------------------------*/
#active-activity-display {
    background-color: #E3EDB9;
    border-radius: 8px 4px 0 4px;
    position: fixed;
    bottom: 0;
    padding: 10px;
    right: 0;
}

body {
    background-color: #182E0B;
    font-size: .85em;
    font-family: Calibri;
    margin: 0;
    padding: 0;
    color: #000000;
}

a:link {
    color: #2c5c11;
    text-decoration: underline;
}

a:visited 
{
    color: #41105c;
}

a:hover {
    color: #1d60ff;
    text-decoration: none;
}

a:active {
    color: #12eb87;
}

p, ul {
    margin-bottom: 20px;
    line-height: 1.6em;
    color: Black;
}

header,
footer,
nav,
section {
    display: block;
}

nav
{
    background-color: transparent;
    padding-bottom: 0px;
    margin-bottom: 0px;
}

/* HEADINGS   
----------------------------------------------------------*/
h1, h2, h3, h4, h5, h6 {
    font-size: 1.5em;
    color: #000;
}

h1 {
    font-size: 2em;
    padding-bottom: 0;
    margin-bottom: 0;
    color: #515c10;
}

h2 {
    padding: 0 0 0 0;
}

h3 {
    font-size: 1.2em;
    padding-bottom: 0;
    margin-bottom: 2px;
}

h4 {
    font-size: 1.1em;
}

h5, h6 {
    font-size: 1em;
}

/* PRIMARY LAYOUT ELEMENTS   
----------------------------------------------------------*/

/* you can specify a greater or lesser percentage for the 
page width. Or, you can specify an exact pixel width. */
.page {
    width: 95%;
    color: #102206;
    margin-left: auto;
    margin-right: auto;
}

header, #header {
    position: relative;
    margin-bottom: 0px;
    color: #000;
    padding: 0;
    height: 100px;
}

header h1, #header h1 {
    font-weight: bold;
    padding: 5px 0;
    margin: 0;
    color: #E3EDB9;
    border: none;
    line-height: 1.8em;
    font-size: 45px !important;
    text-shadow: 1px 1px 2px #111;
}

#main {
    padding: 30px 30px 15px 30px;
    background-color: #fff;
    border-radius: 4px 0 0 0;
    -webkit-border-radius: 4px 0 0 0;
    -moz-border-radius: 4px 0 0 0;
}

footer, 
#footer {
    background-color: #E3EDB9;
    color: #000;
    padding: 10px 15px;
    text-align: left;
    line-height: normal;
    margin: 0 0 30px 0;
    font-size: .9em;
    border-radius: 0 0 4px 4px;
    -webkit-border-radius: 0 0 4px 4px;
    -moz-border-radius: 0 0 4px 4px;
}

/* TAB MENU   
----------------------------------------------------------*/
ul#menu {
    position: relative;
    padding-top: 32px;
    margin-bottom: 0px;
    text-align: right;
}

ul#menu li {
    display: inline;
    list-style: none;
}

ul#menu li#greeting {
    padding: 10px 20px;
    font-weight: bold;
    text-decoration: none;
    line-height: 2.8em;
    color: #fff;
}

ul#menu li a {
    padding: 8px 25px;
    font-weight: bold;
    text-decoration: none;
    line-height: 2.1em;
    background-color: #E3EDB9;
    color: #000000;
    elevation: lower;
    -webkit-border-radius: 4px 4px 0 0;
    -moz-border-radius: 4px 4px 0 0;
}

ul#menu li a:hover {
    background-color: #FFFFFF;
    text-decoration: none;
}

ul#menu li a:active {
    background-color: #E3EDB9;
    text-decoration: none;
}

ul#menu li.selected a {
    background-color: #fff;
    color: #000;
}

/* FORM LAYOUT ELEMENTS   
----------------------------------------------------------*/
.ControlPanel
{
    padding: 10px;
    background-color:#FFFFFF;
}

fieldset {
    border: 1px solid #ddd;
    background-color: #eff1ef;
    padding: 10px 20px 10px 20px;
    margin: 5px 5px 5px 5px;
}

legend 
{
    font-size: 1.2em;
    font-weight: bold;
}

textarea 
{
    min-width: 200px;
    min-height: 100px;
    padding: 0px,5px,0px,5px;
}

input[type="text"], 
input[type="password"] {
    border: 1px solid #ccc;
    padding: 2px;
    font-size: 1.2em;
    color: #444;
    width: 200px;
}

select {
    border: 1px solid #ccc;
    padding: 2px;
    font-size: 1.2em;
    color: #444;
}

input[type="submit"] {
    font-size: 1.2em;
    padding: 5px;
}

/* TABLE
----------------------------------------------------------*/

table {
    border: solid 1px #e8eef4;
    border-collapse: collapse;
}

table td 
{
    min-width: 80px;
    padding: 5px;
    border: solid 1px #e8eef4;
    vertical-align: top;
}

table th {
    padding: 6px 5px;
    text-align: left;
    background-color: #E3EDB9;
    border: solid 1px #e8eef4;
}

/* MISC  
----------------------------------------------------------*/
.clear {
    clear: both;
}

.error {
    color: Red;
}

#LayoutTable
{
    width: 100%;
}

.shortenedTable
{
    background-color: Green;
    border: 5px;
    max-height: 50px;
    overflow: scroll;
}

#ContentColumn
{
    vertical-align: top;
    padding: 10px,20px,10px,20px;
}

#LoginColumn
{
    background-color: #cad6c4;
    padding: 30px; 
    width: 250px;
}

.FrontPageButton 
{ 
    background-color: #96ae89;
    font-weight: bolder;
    text-align: center;
    margin: 10px,auto,10px,auto;
    padding: 10px;
}

nav, #menucontainer 
{
    min-width=;
    margin-top: 20px;
}

div#title {
    display: block;
    float: left;
    text-align: left;
}

#logindisplay {
    font-size: 1.1em;
    display: block;
    text-align: right;
    margin: 10px;
    color: White;
}

#logindisplay a:link {
    color: white;
    text-decoration: underline;
}

#logindisplay a:visited {
    color: white;
    text-decoration: underline;
}

#logindisplay a:hover {
    color: white;
    text-decoration: none;
}

/* Styles for validation helpers
-----------------------------------------------------------*/
.field-validation-error {
    color: #ff0000;
}

.field-validation-valid {
    display: none;
}

.input-validation-error {
    border: 1px solid #ff0000;
    background-color: #ffeeee;
}

.validation-summary-errors {
    font-weight: bold;
    color: #ff0000;
}

.validation-summary-valid {
    display: none;
}

/* Styles for editor and display helpers
----------------------------------------------------------*/
.display-label, 
.editor-label {
    margin: 1em 0 0 0;
}

.display-field, 
.editor-field {
    margin: 0.5em 0 0 0;
}

.text-box {
    width: 30em;
}

.text-box.multi-line {
    height: 6.5em;
}

.tri-state {
    width: 6em;
}
